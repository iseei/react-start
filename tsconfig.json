{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports":true,
    "lib": ["es6", "dom"],
    // "sourceMap": true,
    "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./webpack.config.ts",
    "node_modules",
    "build"
  ]
}